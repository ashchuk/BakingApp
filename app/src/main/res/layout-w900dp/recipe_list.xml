<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/text_margin"
    android:layout_marginRight="@dimen/text_margin"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".ui.activities.RecipeListActivity">

    <LinearLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/details_margin"
        android:layout_marginRight="@dimen/details_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/steps_label"
            android:textSize="@dimen/text_size_24sp"
            tools:text="Steps" />

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recipe_list"
            android:name="com.ashchuk.bakingapp.RecipeListFragment"
            android:layout_width="@dimen/item_width"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:context="com.ashchuk.bakingapp.ui.activities.RecipeListActivity"
            tools:listitem="@layout/recipe_list_content" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/recipe_detail_container"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>